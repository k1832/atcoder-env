{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current C++ File",
            "type": "shell",
            /*
             * TODO(k1832): Reconsider options. Currently using "strict" options given by ChatGPT.
             * TODO(k1832): Define variable that stores common compile options (maybe impossible right now).
             */
            "command": "ccache g++ -std=c++17 -pedantic -Wall -Wextra -Werror -Wsign-conversion -Wconversion -fstrict-aliasing ${file} -o ${fileDirname}/${fileBasenameNoExtension}.out",
            "group": "build"
        },
        {
            "label": "Build Current C++ File To Debug",
            "type": "shell",
            /*
             * TODO(k1832): Reconsider options. Currently using "strict" options given by ChatGPT.
             * TODO(k1832): Define variable that stores common compile options (maybe impossible right now).
             */
            "command": "ccache g++ -std=c++17 -pedantic -Wall -Wextra -Werror -Wsign-conversion -Wconversion -fstrict-aliasing -g3 ${file} -o ${fileDirname}/${fileBasenameNoExtension}.out",
            "group": "test"
        },
        {
            "label": "Build Current C++ File and Run",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "dependsOn": [
                "Build Current C++ File"
            ]
        },
        {
            "label": "oj LOGIN AtCoder",
            "type": "shell",
            "command": "oj login https://atcoder.jp/",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "_Delete test cases",
            "type": "shell",
            "hide": true,
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "rm -rf test/",
            "group": "test"
        },
        {
            "label": "oj DOWNLOAD",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "_Delete test cases"
            ],
            "command": "oj download ${input:problemURL}",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "oj COPY template [C++]",
            "type": "shell",
            "command": "mv ./main.cpp ./main.cpp.bak; cp ./template/template.cpp ./main.cpp && code ./main.cpp",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "oj COPY template [Python]",
            "type": "shell",
            "command": "mv ./main.py ./main.py.bak; cp ./template/template.py ./main.py && code ./main.py",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "oj COPY INPUT generator",
            "type": "shell",
            "command": "cp ./template/generator.py ./input-generator.py && code ./input-generator.py",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "oj COPY OUTPUT generator",
            "type": "shell",
            "command": "cp ./template/generator.py ./output-generator.py && code ./output-generator.py",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "oj generate INPUT with current Python file",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "oj generate-input \"python3 ${file}\"",
            "group": "test"
        },
        {
            "label": "oj generate OUTPUT with current Python file",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "oj generate-output -c \"python3 ${file}\"",
            "group": "test"
        },
        {
            "label": "oj TEST [C++]",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "Build Current C++ File"
            ],
            "command": "oj test -c \"${fileDirname}/${fileBasenameNoExtension}.out\"",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test"
        },
        {
            "label": "oj TEST [Python]",
            "type": "shell",
            "options": {
                "cwd": "${fileDirname}"
            },
            "command": "oj test -c \"python3 ${file}\"",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "test"
        },
        {
            "label": "_oj submit current file",
            "type": "shell",
            "hide": true,
            "command": "oj submit ${file}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "group": "none"
        },
        {
            "label": "oj SUBMIT [C++]",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "oj TEST [C++]",
                "_oj submit current file"
            ],
            "command": "echo Submitted ${file}",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "oj SUBMIT [Python]",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "oj TEST [Python]",
                "_oj submit current file"
            ],
            "command": "echo Submitted ${file}",
            "group": "none",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "problemURL",
            "type": "promptString",
            "description": "Problem URL to download."
        },
    ],
}
